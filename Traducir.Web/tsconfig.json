{
  "compilerOptions": {
    "outDir": "./src/js/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots" : [
      "node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}